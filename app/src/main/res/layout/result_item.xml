<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        tools:context=".MainActivity">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/question_title"
                    android:text="Question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_below="@+id/question_title"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:id="@+id/question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_below="@+id/question"
                    android:id="@+id/answer_title"
                    android:text="Answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_below="@+id/answer_title"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:id="@+id/answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_below="@+id/answer"
                    android:id="@+id/corrent_answer_title"
                    android:text="Correct Answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_below="@+id/corrent_answer_title"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:id="@+id/corrent_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_below="@+id/corrent_answer"
                    android:id="@+id/result_title"
                    android:text="Result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_below="@+id/result_title"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:id="@+id/result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>



    </android.support.v7.widget.CardView>


</RelativeLayout>